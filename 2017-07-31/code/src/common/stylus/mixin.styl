border-1px($color)
  position:relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width:100%
    border-top:1px solid $color
    content:''

border-none() //去除1pxborder
  &:after
    display: none


bg-image($url)
  background-image: url($url+"@2x.png")
  @media (min-device-pixel-ratio:3),(-webkit-device-pixel-ratio:3)
    background-image :url($url +"@3x.png")


.clearfix
  display: inline-block
  &:after
    content:''
    display:block
    height:0
    line-height: 0
    clear: both
    visibility: hidden

